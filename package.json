{
	"name": "kitledger",
	"version": "1.0.0",
	"private": true,
	"description": "Framework for building transactional systems with double entry accounting",
	"keywords": [
		"accounting",
		"framework",
		"ledger",
		"platform"
	],
	"homepage": "https://kitledger.com",
	"bugs": {
		"url": "https://github.com/kitledger/kitledger/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitledger/kitledger.git"
	},
	"author": "Alejandro Barrera Aponte",
	"license": "Apache-2.0",
	"main": "index.js",
	"scripts": {
		"build": "pnpm -r run build && typedoc",
		"dev:serve": "pnpm -F=dev run serve",
		"docs:dev": "pnpm -F=docs run dev",
		"docs:build": "pnpm -F=docs run build && pnpm run typedoc",
		"docs:preview": "pnpm -F=docs run preview",
		"typedoc": "typedoc",
		"format": "oxfmt",
		"test": "pnpm -r run test"
	},
	"dependencies": {
		"@types/node": "^24.10.1"
	},
	"devDependencies": {
		"oxfmt": "^0.18.0",
		"typedoc": "^0.28.16",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"packageManager": "pnpm@10.17.1",
	"pnpm": {
		"overrides": {
			"vite": "npm:rolldown-vite@7.2.5"
		}
	}
}
